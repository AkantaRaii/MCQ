<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Subjects</title>
    <link rel="stylesheet" href="/css/course.css">
    <link rel="stylesheet" href="/css/subjects.css">
    <!-- Add Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <div class="dashboard-container">
        <!-- Breadcrumb navigation -->
        <nav class="breadcrumb">
            <a href="/admin/courses"><i class="fas fa-home"></i> Courses</a>
            <i class="fas fa-chevron-right"></i>
            <a href="/admin/subjects/<%= course.course_id %>"><%= course.course_name %></a>
        </nav>

        <header class="dashboard-header">
            <div class="header-content">
                <h1>Subjects</h1>
                <p class="course-subtitle">Course: <%= course.course_name %></p>
            </div>
            <button class="add-course-btn" onclick="window.location.href='/admin/manageSubject/<%= course.course_id %>'">
                <i class="fas fa-plus"></i> Add Subject
            </button>
        </header>

        <div class="subjects-container">
            <% if (subjects.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-book empty-icon"></i>
                    <h2>No Subjects Available</h2>
                    <p>Get started by adding your first subject</p>
                    <button class="add-course-btn" onclick="window.location.href='/admin/manageSubject/<%= course.course_id %>'">
                        <i class="fas fa-plus"></i> Add Subject
                    </button>
                </div>
            <% } else { %>
                <div class="subjects-list">
                    <% subjects.forEach((subject, index) => { %>
                        <div class="subject-card" onclick="window.location.href='/admin/questions/<%= subject.subject_id %>'">
                            <div class="subject-number"><%= index + 1 %></div>
                            <div class="subject-content">
                                <div class="subject-icon">
                                    <i class="fas fa-book-open"></i>
                                </div>
                                <div class="subject-info">
                                    <h3><%= subject.subject_name %></h3>
                                    <div class="subject-meta">
                                        <span class="subject-id">
                                            <i class="fas fa-hashtag"></i> <%= subject.subject_id %>
                                        </span>
                                        <span class="subject-questions">
                                            <i class="fas fa-question-circle"></i> 0 Questions
                                        </span>
                                    </div>
                                </div>
                                <div class="subject-action">
                                    <span class="view-questions">View Questions <i class="fas fa-arrow-right"></i></span>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>