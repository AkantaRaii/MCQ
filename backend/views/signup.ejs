<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/signup.css">
</head>
<body>

    <div class="container">
        <h2>Create an Account</h2>

        <form id="signupForm">
            <input type="text" id="username" placeholder="Username" required>
            <input type="email" id="email" placeholder="Email" required>
            <input type="password" id="password" placeholder="Password" required>

            <label class="admin-label">
                <input type="checkbox" id="isAdmin"> Register as Admin
            </label>
            <input type="text" id="adminSecret" placeholder="Admin Secret (Optional)" disabled>

            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>

        <p>Already have an account? <a href="signin">Sign In</a></p>

        <div class="social-login">
            <button onclick="googleLogin()" class="btn google-btn">Continue with Google</button>
            <button onclick="facebookLogin()" class="btn facebook-btn">Continue with Facebook</button>
        </div>
    </div>

    <script>
        document.getElementById("isAdmin").addEventListener("change", function() {
            document.getElementById("adminSecret").disabled = !this.checked;
        });

        document.getElementById("signupForm").addEventListener("submit", async function(event) {
            event.preventDefault();
            console.log('Form submitted');

            const username = document.getElementById("username").value;
            const email = document.getElementById("email").value;
            const password = document.getElementById("password").value;
            const isAdmin = document.getElementById("isAdmin").checked;
            const adminSecret = document.getElementById("adminSecret").value;

            console.log('Form data:', { username, email, isAdmin, adminSecret: adminSecret ? '[HIDDEN]' : 'not provided' });

            try {
                const response = await fetch("http://localhost:3000/auth/signup", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ username, email, password, isAdmin, adminSecret })
                });

                console.log('Response status:', response.status);
                const result = await response.json();
                console.log('Response data:', result);
                
                alert(result.message);
                if (response.ok) {
                    window.location.href = "/auth/signin";
                }
            } catch (error) {
                console.error('Detailed error:', error);
                console.error('Error message:', error.message);
                console.error('Error stack:', error.stack);
                alert('An error occurred during signup. Please try again.');
            }
        });

        function googleLogin() {
            window.location.href = "http://localhost:3000/auth/google";
        }
        function facebookLogin() {
            window.location.href = "http://localhost:3000/auth/facebook";
        }
    </script>

</body>
</html>
