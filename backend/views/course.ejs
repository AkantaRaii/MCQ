<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">  
    <title>Courses</title>
    <link rel="stylesheet" href="/css/course.css">
</head> 
<body>
    <p style="text-align: left;">
        <a style="text-decoration: none; color: black;" href="/admin/courses"> â–º courses â–º</a>
    </p>
    
    <h1>Courses</h1>
<div class="container">
    <div class="list">
        <!-- Check if the courses list is empty -->
        <% if (courses.length === 0) { %>
            <div class="empty-message">
                ğŸ“¢ No courses available. Click "Add and Manage Course" to create one.
            </div>
        <% } else { %>
            <!-- Loop through each course and generate a card -->
            <% courses.forEach((course, index) => { %>
                <div class="card" id="card-<%= course.course_id %>" onclick="window.location.href='/admin/subjects/<%= course.course_id %>'">
                    <%= index + 1 %>. <span id="name-<%= course.course_id %>">
                        <%= course.course_name %>
                    </span>
                    <div class="actions">
                        <!-- Add any actions here if needed -->
                    </div>
                </div>
            <% }); %>
        <% } %>
    </div><br>

    <div class="form-group">
        <button class="add-course">
            <a style="text-decoration: none; color: white;" href="/admin/manageCourse">Add and Manage Course</a>
        </button>
    </div>
</div>

</body>